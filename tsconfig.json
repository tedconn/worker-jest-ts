{
    "compilerOptions": {
        "strict": true,
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "module": "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "target": "es2018",
        "skipLibCheck": true,
        "noImplicitAny": false,
        "allowJs": true,
        "experimentalDecorators": true,
        "outDir": "dist/commonjs"
    },

    "exclude": ["**/__tests__", "**/__mocks__", "**/node_modules"],
    "include": ["src/**/*"]
}
